<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_Blue"
    tools:context=".RegisterAccountActivity"
    >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="13dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Registro"
        android:textAlignment="center"
        android:textColor="@color/grey_white"
        android:textSize="44sp"
        app:layout_constraintBottom_toTopOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/view2"
        android:layout_width="349dp"
        android:layout_height="502dp"
        android:background="@drawable/et_bg"
        android:backgroundTint="@color/light_Blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.493" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/et_bg"
        android:fontFamily="@font/montserrat_medium"
        android:hint="Nome Completo"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textColorHint="@color/light_Blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view2"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/etCpf"
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/et_bg"
        android:hint="CPF"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textColorHint="@color/light_Blue"
        android:fontFamily="@font/montserrat_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etName" />


    <EditText
        android:id="@+id/etBirthDate"
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="13dp"
        android:fontFamily="@font/montserrat_medium"
        android:hint="Data de nascimento"
        android:maxLines="1"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textColorHint="@color/light_Blue"
        android:background="@drawable/et_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etCpf" />

    <EditText
        android:id="@+id/etCel"
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="13dp"
        android:hint="Telefone Celular"
        android:maxLines="1"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textColorHint="@color/light_Blue"
        android:fontFamily="@font/montserrat_medium"
        android:background="@drawable/et_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etBirthDate" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:hint="E-mail"
        android:maxLines="1"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textColorHint="@color/light_Blue"
        android:fontFamily="@font/montserrat_medium"
        android:background="@drawable/et_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etCel"
        android:layout_margin="16dp"/>


    <EditText
        android:id="@+id/etPassword"
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:hint="Senha"
        android:maxLines="1"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textColorHint="@color/light_Blue"
        android:fontFamily="@font/montserrat_medium"
        android:background="@drawable/et_bg"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etEmail"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/etConfirmPassword"
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:hint="Confirmar Senha"
        android:maxLines="1"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textColorHint="@color/light_Blue"
        android:layout_margin="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/et_bg"
        android:fontFamily="@font/montserrat_medium"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etPassword"/>


    <Button
        android:id="@+id/btnRegister"
        android:layout_width="289dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/dark_Blue"
        android:fontFamily="@font/montserrat_medium"
        android:text="Registrar"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etConfirmPassword"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/ivVoltar"
        android:layout_width="90dp"
        android:layout_height="58dp"
        android:src="@drawable/seta_voltar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>