<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ClientMainActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:background="@color/dark_Blue"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:srcCompat="@drawable/design_sem_nome_2_removebg_preview" />

    <TextView
        android:id="@+id/tvLockIt"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="62dp"
        android:layout_marginTop="50dp"
        android:fontFamily="monospace"
        android:text="LockIt"
        android:textAlignment="center"
        android:textColor="@color/grey_white"
        android:textSize="64sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewLightBlue"
        android:layout_width="367dp"
        android:layout_height="370dp"
        android:background="@drawable/container_components"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvLockIt"
        app:layout_constraintVertical_bias="0.28" />

    <TextView
        android:id="@+id/tvSelecione"
        android:layout_width="286dp"
        android:layout_height="71dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Selecione o período de tempo que deseja alugar:"
        android:textAlignment="center"
        android:textColor="@color/grey_white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/viewLightBlue" />

    <TextView
        android:id="@+id/tvMostre"
        android:layout_width="286dp"
        android:layout_height="71dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Mostre o QR Code para o gerente para confirmar a locação:"
        android:textAlignment="center"
        android:textColor="@color/grey_white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/viewLightBlue"
        app:layout_constraintTop_toTopOf="@id/viewLightBlue"
        android:visibility="invisible"/>


    <RadioGroup
        android:id="@+id/rgOpcoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scaleX="1.1"
        android:scaleY="1.1"
        app:layout_constraintTop_toTopOf="@id/viewLightBlue"
        app:layout_constraintLeft_toLeftOf="@id/viewLightBlue"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="90dp">

        <RadioButton
            android:id="@+id/rb30m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30 min - R$"
            android:textSize="22sp" />

        <RadioButton
            android:id="@+id/rb1h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 horas - R$"
            android:textSize="22sp" />

        <RadioButton
            android:id="@+id/rb2h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 horas - R$"
            android:textSize="22sp" />

        <RadioButton
            android:id="@+id/rb4h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 horas - R$"
            android:textSize="22sp" />

        <RadioButton
            android:id="@+id/rbAte18h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Até as 18h -"
            android:textSize="22sp" />
    </RadioGroup>


    <Button
        android:id="@+id/btnConfirmar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/light_Blue"
        android:fontFamily="@font/montserrat_medium"
        android:text="Confirmar locação"
        android:textSize="25sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.777" />

    <ImageView
        android:id="@+id/ivVoltar"
        android:layout_width="90dp"
        android:layout_height="58dp"
        android:src="@drawable/seta_voltar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
         />

    <TextView
        android:id="@+id/tvInfoLocacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/grey_white"
        android:textSize="20sp"
        android:fontFamily="monospace"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/viewLightBlue"/>

    <TextView
        android:id="@+id/tvCartaoNaoSelecionado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nenhum cartão Selecionado. Por favor, selecione um cartão."
        android:textColor="@color/grey_white"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:visibility="gone"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/viewLightBlue"/>



</androidx.constraintlayout.widget.ConstraintLayout>